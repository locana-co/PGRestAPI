extends ../../../shared_views/layout

block content
	p
		| TopoJSON files for this table
	
	table
			thead
				tr
					th Name
			tbody
				- each file in files
					tr
						td 
							a(href=file.link,target='_blank') #{file.name}

	p
		| Make a TopoJSON file for this entire dataset

	form(action='',method='post')
		table.inputTable
			tr
				td
					label(for='topofilename') TopoJSON File name
				td
					input(id='topofilename',type='text',value=topofilename||table,placeholder=topofilename||table,name='topofilename')

		div(data-role='fieldcontain')   
			input(type='submit',value='Submit',data-transition='fade', data-theme='c')


	-if(infoMessage){
		div.infoMessage
			|#{infoMessage}
	-}
	-if(errorMessage){
		div.errorMessage
			|#{errorMessage}
	-}












						

		
block sidebar
	.widget